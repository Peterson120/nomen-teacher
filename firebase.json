{
  "hosting": {
    "predeploy": "npm i && npm run build",
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      ".gitingore",
      ".syncignore",
      ".envstruct",
      "feature.txt",
      "README.md",
      "build"
    ],
    "emulators": {
      "hosting": {
        "port": 3000,
        "host": "0.0.0.0"
      }
    },
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}